@*@QnSCodeCopy*@
@using Microsoft.AspNetCore.Mvc.Razor
@using Microsoft.AspNetCore.Mvc.Rendering
@using QnSCommunityCount.AspMvc.Modules.Session
@model QnSCommunityCount.AspMvc.Models.Persistence.App.CostRecord
@*Begin:Header*@
@{
#if DEBUG
    string currentView = ((RazorView)ViewContext.View).Path;
    string beginLabel = $"<!--View Begin: '{currentView}'-->";
    @Html.Raw(beginLabel)
#endif
    SessionWrapper sessionWrapper = new SessionWrapper(Context.Session);
    Func<string, string> translate = sessionWrapper.Translate;
}
@*End:Header*@

@{
    string controller = ViewContext.RouteData.Values["controller"].ToString();
    Func<string, string> translateFor = pn => translate($"{controller}.{pn}");
    string title = "Delete";
    string action = "DeleteCostRecord";
    var communityCosts = Model.CommunityCosts;
    var costCollection = Model.CommunityCosts.CostCollection;

    title = translate(title);
    ViewData["Title"] = title;
    ViewData["TranslateFor"] = translateFor;
}

<h1>@title</h1>
<div class="d-flex bg-transparent">
    <div class="p-sm-2 mr-auto">
        <h4>@translate(controller)</h4>
    </div>
</div>
<hr />

<dl class="row">
    <dt class="col-sm-4">
        <label class="control-label">@translateFor(nameof(costCollection.Designation))</label>
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => costCollection.Designation)
    </dd>
    <dt class="col-sm-4">
        <label class="control-label">@translateFor(nameof(costCollection.Description))</label>
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(model => costCollection.Description)
    </dd>
</dl>
<hr />

<form asp-action="DeleteCostRecord">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" name="CostCollectionId" value="@Model.CostCollectionId" />
    @if (Model.HasError)
    {
        <span class="field-validation-error" data-valmsg-for="Error" data-valmsg-replace="true">@translate(Model.ActionError)</span>
    }
    else
    {
        <h3>@translate("Are you sure you want to delete this?")</h3>
    }
    <p></p>
    <dl class="row">
        <dt class="col-sm-3">
            @translateFor(Html.DisplayNameFor(model => model.Date))
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-3">
            @translateFor(Html.DisplayNameFor(model => model.Designation))
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Designation)
        </dd>
        <dt class="col-sm-3">
            @translateFor(Html.DisplayNameFor(model => model.Amount))
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-3">
            @translateFor(Html.DisplayNameFor(model => model.Member))
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Member)
        </dd>
    </dl>
    @await Html.PartialAsync("_SubmitBack", new SubmitBackCmd() { SubmitText = "Delete", SubmitCss = "btn btn-danger" })
</form>
@*Begin:Footer*@
@{
#if DEBUG
    string endLabel = $"<!--View Ende: '{currentView}'-->";

    @Html.Raw(endLabel)
#endif
}
@*End:Footer*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
